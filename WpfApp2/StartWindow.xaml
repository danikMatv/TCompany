<Window x:Class="WpfApp2.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="300" Width="400" 
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F" 
        ResizeMode="NoResize">

    <Window.Effect>
        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#2A2A3B"/>
    </Window.Effect>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Welcome to Manager Project!" 
                   Foreground="White" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   TextAlignment="Center"/>

        <Button Content="Login" Width="150" Margin="10" 
                Click="LoginButton_Click" 
                Style="{DynamicResource RoundedButtonStyle}"/>

        <Button Content="Register" Width="150" Margin="10" 
                Click="RegisterButton_Click" 
                Style="{DynamicResource RoundedButtonStyle}"/>
    </StackPanel>
</Window>
