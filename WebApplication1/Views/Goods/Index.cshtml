@model IEnumerable<DTO.Entity.Goods>

@{
    ViewData["Title"] = "Goods List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Create", "Goods")" class="btn btn-primary">Create New Goods</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.price</td>
                <td>@item.manager_id</td>
                <td>
                    <a href="@Url.Action("Details", "Goods", new { id = item.id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "Goods", new { id = item.id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Goods", new { id = item.id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
