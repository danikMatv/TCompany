<Window x:Class="WpfApp2.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F"
        ResizeMode="NoResize">

    <Window.Effect>
        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#2A2A3B"/>
    </Window.Effect>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="238" Width="305">
            <TextBlock Text="Select Registration Type" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20" 
                       TextAlignment="Center"/>

            <Button Content="Register as User" Width="228" Margin="10" 
                    Click="UserButton_Click" 
                    Style="{DynamicResource RoundedButtonStyle}" Height="65"/>

            <Button Content="Register as Manager" Width="229" Margin="10" 
                    Click="ManagerButton_Click" 
                    Style="{DynamicResource RoundedButtonStyle}" Height="71"/>
        </StackPanel>
    </Grid>
</Window>
